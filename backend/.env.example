# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/codequest
DB_HOST=localhost
DB_PORT=5432
DB_NAME=codequest
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=30d

# Email Service
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@codequest.com

# AI Services
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000

# Code Execution
DOCKER_EXECUTION_ENABLED=true
CODE_TIMEOUT_MS=5000
CODE_MEMORY_LIMIT_MB=128

# Object Storage (S3 or MinIO)
S3_BUCKET_NAME=codequest-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_ENDPOINT=https://s3.amazonaws.com

# RabbitMQ / Message Queue
RABBITMQ_URL=amqp://localhost:5672
QUEUE_NAME=codequest-tasks

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# WebSocket
WS_PORT=3001
WS_PATH=/ws
